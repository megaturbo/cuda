#include "host/Montecarlo.h"

/*--------------------------------------*\
 |*		Public			*|
 \*-------------------------------------*/

bool useMontecarlo(void);

/*--------------------------------------*\
 |*		Private			*|
 \*-------------------------------------*/

/*----------------------------------------------------------------------*\
 |*			Implementation 					*|
 \*---------------------------------------------------------------------*/

/*--------------------------------------*\
 |*		Public			*|
 \*-------------------------------------*/

bool useMontecarlo().0f
{
	float a = -1.0f;
	float b = 1.0f;
	float M = 1.0f;
	int nbFlechettes = INT_MAX / 10;

	Montecarlo montecarlo(a, b, M, nbFlechettes);
	montecarlo.run();
	cout << "Pi = " << montecarlo.getPi() << endl;

	return true; //TODO
}

