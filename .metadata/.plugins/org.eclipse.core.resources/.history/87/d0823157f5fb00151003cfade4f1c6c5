/**
 * Override
 */
Animable_I<uchar4>* JuliaProvider::createAnimable(void)
{
	//TODO
	//Corriger domaine math
	//Comprendre n
	//Définir si dt utile ou pas
	//Corriger dimensions

	//Domaine mathématique
	DomaineMath domaineMath = DomaineMath(-1.7, -1.2, 1.7, 1.2);

	//Delta time
	float dt = 0.0f;

	// WHAT THE FUCK DOES THAT STAND FOR ?
	uint n = 50;
	float c1 = -0.52;
	float c2 = 0.57;

	//Dimensions
	int dw = 16 * 60 * 2;
	int dh = 16 * 60;

	return new Julia(dw, dh, dt, n, c1, c2, domaineMath);
}

/**
 * Override
 */
Image_I* JuliaProvider::createImageGL(void)
{
	ColorRGB_01 textColor(0, 0, 0); // black
	return new ImageAnimable_RGBA_uchar4(createAnimable(), textColor);
}

