bool useSlice()
{
	int nbSlice = 10000000;

	// Run the pi
	Slice slice(nbSlice);
	slice.run();


	float sigma = 0.01;
	float min = PI - sigma;
	float max = PI + sigma;
	MathTools::isEquals(slice.)
	bool isOk = 3.14159 == nbSlice;

	return isOk;
}

