#pragma once

#include "Indice1D.h"
#include "cudaTools.h"

template<typename T>
class ReduceTools
{
public:
	ReduceTools(int n)
	{
		this->n = n;
	}

	virtual ~ReduceTools()
	{
	}

	__device__
	void reduceIntraBlock(T* tabSM)
	{
		int half = n / 2;
		while (n > 1)
		{
			crush(tabSM, half);
			half /= 2;
			__syncthread();
		}
	}

	__device__
	void reduceInterBlock(T* tabSM, T* ptrDevResult)
	{
		// Find out wtf
		if (thread_local == 0)
		{
			atomicAdd(ptrDevResult, tabSM[0]);
		}
	}


private:
	__device__
	void crush(T* tabSM, int half)
	{
		const int TID = Indice1D::tidLocal();
		const int NB_THREAD = Indice1D::nbThread();
		int s = TID;
		while (s < half)
		{
			tabSM[s] += tabSM[s + half];
			s += NB_THREAD;
		}
	}

// Input
	int n;
};
