#pragma once

#include <math.h>
#include "MathTools.h"

#include "Calibreur_GPU.h"
#include "ColorTools_GPU.h"
using namespace gpu;

/* ========== DECLARATION ========== */

class RayTracingMath
{
	/* ---------- PUBLIC ---------- */

public:
	/* ---------- CONSTRUCTEUR ---------- */

	__device__ RayTracingMath()
	{
		// Nope
	}

	__device__
	virtual ~MandelbrotMath()
	{
		// Nope
	}

	/* ---------- METHODES ---------- */

	__device__
	void colorXY(uchar4 *ptrColor, float x, float y, float t)
	{
		f(x, y, t, &ptrColor);
	}

private:

	__device__
	void f(float x, float y, float t, uchar* ptrColor)
	{
		ptrColor->x
	}

	/* ---------- ATTRIBUTS ---------- */
};
