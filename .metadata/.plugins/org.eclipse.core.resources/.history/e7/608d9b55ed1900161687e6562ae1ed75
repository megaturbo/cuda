bool useMontecarlo()
{

    float M = 10; //TODO Checker
    int nbFlechettes = INT_MAX / 100000;

    Montecarlo montecarlo(M, nbFlechettes);
    montecarlo.run();
    cout << montecarlo.getPi() << endl;

    return true; //TODO
}

