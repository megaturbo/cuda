#include "Slice.h"

/*--------------------------------------*\
 |*		Public			*|
 \*-------------------------------------*/

bool useSlice(void);

/*--------------------------------------*\
 |*		Private			*|
 \*-------------------------------------*/

/*----------------------------------------------------------------------*\
 |*			Implementation 					*|
 \*---------------------------------------------------------------------*/

/*--------------------------------------*\
 |*		Public			*|
 \*-------------------------------------*/

bool useSlice()
    {
    int nbSlice = 20;

    float* ptrPi;

    // Partie interessante
	{
	Slice slice(ptrPi, nbSlice);
	slice.run();
	cout << "Pi = " << ptrPi;
	}

    delete[] ptrPi;

    return true;
    }

